{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "types": ["vite/client"],
        "paths": {
            "@/*": ["./src/*"],
            "@ss/*": ["./packages/*"]
        },
        "rootDir": "src"
    },

    "include": [
        "src"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ],

    "프로젝트에 적용할때": {
        "extends": "@ss/config/tsconfig.json",
        "compilerOptions": {
            "rootDir": "src"
        },
        "include": [
            "src"
        ]
    }
}
